@model ProductsModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryList")
    </div>
    <div class="col-md-9">
        <div class="row">
            <partial name="_slider" />
        </div>
        <div class="row mt-3">
            @foreach (var prods in Model.Products)
            {
                <partial name="_products" for="@prods" />
            }
        </div>
    </div>
</div>

