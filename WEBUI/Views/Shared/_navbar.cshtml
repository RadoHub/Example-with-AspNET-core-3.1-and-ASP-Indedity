<nav class="navbar navbar-expand-lg bg-dark bg-success fixed-top">
    <div class="container">
        <a class="navbar-brand" href="/">ShopAPP</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
                <a asp-controller="Shop" asp-action="List" asp-route-id="@null" class="nav-link">Products</a>
            </li>
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a asp-controller="Cart" asp-action="index" class="nav-link">Cart</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Cart" asp-action="GetOrders" class="nav-link">Orders</a>
                </li>
                @if (User.IsInRole("admin"))
                {
                    <li class="nav-item">
                    <a asp-controller="Admin" asp-action="createproduct" class="nav-link">Add Products</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="ProductList" class="nav-link">Admin Products</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="CreateCategory" class="nav-link">Add Categories</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="CategoryList" class="nav-link">Admin Categories</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Categories</a>
                    </li>

                }

            }


        </ul>
        @* kullanici login ile dogrulanmis ise  *@
        <ul class="navbar-nav mr-auto">
            @if (User.Identity.IsAuthenticated)
            {
                //kullanici adini yazdiriyoruz
                <li class="nav-item">
                     <a asp-controller="Account" asp-action="Manage" class="nav-link">Welcome @User.Identity.Name</a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Logout" class="nav-link">LogOut</a>
                </li>
            }
            else
            {


                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Account" asp-action="Login" class="nav-link">LogIn</a>
                </li>

            }
        </ul>
    </div>
</nav>