@model ProductModel
@{
    ViewData["Title"] = "Create Product";
}
@section ValidationScripts{
    <script src="/modules/ckeditor4/ckeditor.js"></script>
    <script>


        CKEDITOR.replace("editor", {
            
            uiColor: '#fca103'

        });
    </script>

}
<h1>CreateProduct</h1>
<hr />
@if (ViewBag.Errors != null)
{
    <span class="text-danger">@ViewBag.Errors</span>
}
<form asp-controller="Admin" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImgUrl" class="col-md-2"></label>
        <div class="col-md-10">
            <input type="file" name="file" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Price" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Price" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-md-2"></label>
        <div class="col-md-10">
            <textarea id="editor" asp-for="Description" cols="100" rows="4" class="form-control"></textarea>
        </div>
    </div>
    <div class="row float-right">
        <button type="submit" class="btn btn-sm btn-info ">Create Product</button>
    </div>
</form>



