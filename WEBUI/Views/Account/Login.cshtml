@model LoginModel
@{
    ViewData["Title"] = "Login";
    var counter = 0;
}

<h1>Login</h1>
@section ValidationScripts {

    <script src="/modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}


<div class="row">
    <div class="col-md-6">

        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl"/>


            <div class=" form-group row">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-4">
                    <input asp-for="Email" value="@Model.Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class=" form-group row">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-4">
                    <input asp-for="Password" value="@Model.Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox"
                       name="isChecked"
                       class="custom-control-input"
                       value="true"
                       id="loggedKalma" />
                <label class="custom-control-label" for="loggedKalma">Remember me for 7 days</label>
            </div>
            <button type="submit" class="btn btn-info btn-sm">Log in</button>
        </form>
        <div class="col-md-12">
            <a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a>
        </div>
    </div>
</div>

