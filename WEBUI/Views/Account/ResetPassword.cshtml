@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
@section ValidationScripts {

    <script src="/modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<h1>ResetPassword</h1>
<div class="row">
    <div class="col-md-12">
        <form class="form" asp-controller="Account" asp-action="resetpassword" method="post">
            <span asp-validation-for="Email"></span>
            <span asp-validation-for="Password"></span>
            <span asp-validation-for="RePassword"></span>
            <input type="hidden" name="Token" value="@Model.Token" />

            <div class="form-group row">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email" name="Email" value="@Model.Email" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Password" name="Password" value="" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RePassword" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="RePassword" name="RePassword" value="" />
                </div>
            </div>
            <button class="btn btn-info btn-sm" type="submit">Change Password</button>

        </form>
    </div>
</div>